#include <iostream>
#include <cstdlib> // Required for the exit() function

using namespace std;

int main() {
    while (1) { // Infinite loop
        int choice;
        cout << "Enter a choice (1-3) or 0 to exit: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "You chose option 1." << endl;
                break; // Normal case handling
            case 2:
                cout << "You chose option 2." << endl;
                break; // Normal case handling
            case 3:
                cout << "You chose option 3." << endl;
                break; // Normal case handling
            case 0:
                cout << "Exiting..." << endl;
                exit(0); // Terminate the program and exit the loop
            default:
                cout << "Invalid choice. Please try again." << endl;
                break; // Normal case handling
        }
    }

    return 0; // Not reached if exit() is called
}
